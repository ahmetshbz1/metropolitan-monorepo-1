{
  "expo": {
    "name": "metropolitan",
    "slug": "metropolitan",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "metropolitan",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "locales": {
      "tr": "./locales/native/tr.json",
      "pl": "./locales/native/pl.json", 
      "en": "./locales/native/en.json"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ahmetshbzz.metropolitan",
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true,
        "CFBundleLocalizations": ["tr", "en", "pl"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.ahmetshbzz.metropolitan"
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/metropolitan.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      "expo-font",
      "expo-localization",
      "expo-image-picker"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
