# General
NODE_ENV=development
LOG_LEVEL=debug
JWT_SECRET=your-super-secret-jwt-key-here-min-32-characters

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
POSTGRES_USER=your-db-user
POSTGRES_PASSWORD=your-db-password
POSTGRES_DB=metropolitan
DATABASE_URL=postgresql://user:password@localhost:5432/metropolitan

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://localhost:6379

# Sentry (Optional - for error monitoring)
SENTRY_DSN=your-sentry-dsn-here

# Twilio (SMS/OTP Service)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
TWILIO_VERIFY_SERVICE_SID=your-twilio-verify-service-sid
ENABLE_REAL_SMS=false

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Fakturownia (Polish Invoice System)
FAKTUROWNIA_API_TOKEN=your-fakturownia-api-token
FAKTUROWNIA_API_URL=https://your-account.fakturownia.pl
