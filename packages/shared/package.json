{
  "name": "@metropolitan/shared",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": {
      "types": "./index.ts",
      "react-native": "./index.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "constants",
    "types",
    "utils",
    "index.ts"
  ],
  "scripts": {
    "build": "bun build ./index.ts --outdir ./dist --target node && printf 'export * from \"../index\";\n' > dist/index.d.ts",
    "dev": "bun build ./index.ts --outdir ./dist --target node --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "check": "bun run lint && bun run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "typescript": "^5.0.0"
  }
}
