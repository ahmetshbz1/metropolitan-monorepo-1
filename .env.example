# Metropolitan E-Commerce Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
LOG_LEVEL=info

# Security
JWT_SECRET=your-super-secret-jwt-key-min-32-characters

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
POSTGRES_USER=metropolitan_user
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=metropolitan_db
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DB_HOST}:${DB_PORT}/${POSTGRES_DB}

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# Sentry Monitoring
SENTRY_DSN=your-sentry-dsn

# Twilio SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+48732125573
TWILIO_VERIFY_SERVICE_SID=your-twilio-verify-service-sid
ENABLE_REAL_SMS=false

# Test Credentials
TEST_PHONE_NUMBER=+48123456789
TEST_OTP_CODE=555555

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Live Keys (Production)
STRIPE_SECRET_KEY_LIVE=sk_live_your_stripe_live_key
STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_your_stripe_live_key
STRIPE_WEBHOOK_SECRET_LIVE=whsec_your_live_webhook_secret

# Fakturownia
FAKTUROWNIA_API_TOKEN=your-fakturownia-token
FAKTUROWNIA_API_URL=https://yourcompany.fakturownia.pl
FAKTUROWNIA_ACCOUNT=your-account-name

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Admin Panel
ADMIN_API_KEY=your-admin-api-key
ADMIN_JWT_SECRET=your-admin-jwt-secret
ADMIN_JWT_EXPIRES_IN=15m
ADMIN_JWT_REFRESH_EXPIRES_IN=7d

# AI APIs (Optional)
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key

# API Ports
API_PORT=3000
WEB_PORT=3001
ADMIN_PORT=3002
